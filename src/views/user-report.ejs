<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <title>User Report</title>
  <style>
    body {
      font-family: sans-serif;
      padding: 20px;
    }
    h1 {
      color: teal;
      text-align: center;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
      font-size: 12px;
    }
    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }
    th {
      background-color: #f4f4f4;
    }
    .meta {
      text-align: right;
      font-size: 12px;
      color: #777;
    }
  </style>
</head>
<body>
  <h1>User Report</h1>
  <div class="meta">
    Date: <%= date %> <br/>
    Total Users: <%= totalCount %>
  </div>

  <table>
    <thead>
      <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Status</th>
        <th>Joined</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.phone %></td>
          <td><%= user.status %></td>
          <td><%= user.joined %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
